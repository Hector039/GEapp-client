{
  "expo": {
    "name": "GEapp",
    "slug": "GEapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/geLogo01.svg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/generarecologo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hector039.GEapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/generarecologo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_STEPS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.hector039.GEapp"
    },
    "web": {
      "favicon": "./assets/generarecologo.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to change you avatar."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "minSdkVersion": 26
          }
        }
      ],
      [
        "expo-health-connect"
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Permite que la app cuente tus pasos mientras caminas."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysPermissionMsg": "Necesitamos acceso al sensor incluso con la pantalla apagada para contar tus pasos con precisi√≥n.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f54a2095-3f2b-44cc-8e62-88d1d241e268"
      }
    }
  }
}